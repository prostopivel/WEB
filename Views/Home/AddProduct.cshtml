@model Shop.Models.Product

<form asp-action="AddProduct" asp-controller="Home" method="post">
    <h2 class="display-4">Добавить продукт</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="name">Название продукта</label>
        <input type="text" class="form-control" id="name" name="name" asp-for="Name" placeholder="Введите название продукта">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="price">Цена</label>
        <input type="text" class="form-control" id="price" name="price" asp-for="Price" placeholder="Введите цену">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="count">Количество</label>
        <input type="text" class="form-control" id="count" name="count" asp-for="Count" placeholder="Введите количество">
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

<script>
    function replaceCommaWithDot() {
        var priceInput = document.getElementById('price');
        if (priceInput) {
            priceInput.value = priceInput.value.replace(',', '.');
        }
    }
</script>